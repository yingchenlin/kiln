{
  "dataset": {
    "type": "image",
    "name": "cifar-10",
    "path": "datasets",
    "train": {
      "batch_size": 50,
      "shuffle": true
    },
    "test": {
      "batch_size": 50,
      "shuffle": false
    }
  },
  "model": {
    "name": "mlp",
    "num_layers": 3,
    "hidden_dim": 100,
    "activation": {
      "name": "relu",
      "layers": [0, 1, 2]
    },
    "dropout": {
      "name": "bernoulli",
      "std": 0.5,
      "on": "state",
      "layers": [1, 2, 3]
    }
  },
  "fit": {
    "num_epochs": 50,
    "ckpt_interval": 1,
    "num_samples": 1,
    "loss_fn": {
      "name": "ce"
    },
    "optimizer": {
      "name": "sgd",
      "momentum": 0.9,
      "learning_rate": 5e-3,
      "weight_decay": 0
    }
  },
  "metrics": {
    "ranking": {
      "topks": [1],
      "weights": ["recall"],
      "is_dist": false,
      "is_excl": false,
      "is_multi": false,
      "eps": 1e-8
    }
  }
}